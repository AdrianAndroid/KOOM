<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kwai.koom.demo.MainActivity">

    <TextView
        android:id="@+id/tv_report_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:text="MainActivity"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_java_leak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/test_java_leak" />

    <Button
        android:id="@+id/btn_test_native_leak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_java_leak"
        android:layout_centerInParent="true"
        android:text="Test Native Leak" />

    <Button
        android:id="@+id/btn_test_thread_leak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_test_native_leak"
        android:layout_centerInParent="true"
        android:text="Test Thread Leak" />


    <Button
        android:id="@+id/btn_getavailablememoery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_test_native_leak"
        android:layout_centerInParent="true"
        android:text="获取内存大小" />


</LinearLayout>